<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/xlarge_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="SecondaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_secondary_button</item>
    </style>

    <style name="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/headline_font</item>
    </style>

    <style name="HeadlineStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="fontFamily">@font/headline_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="fontFamily">@font/main_font</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/xlarge_margin</item>
        <item name="android:paddingHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
    </style>

</resources>
